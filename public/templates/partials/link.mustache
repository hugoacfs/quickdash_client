<div class="col-12 col-sm-6 col-md-4 col-lg-3 text-center ">
    <div class="card m-1">
        <a title="{{description}}" class="text-reset text-decoration-none text-wrap" href="{{{url}}}" target="_blank">
            <div class="card-body ">
                <div class="text-wrap" style="font-size: 6rem !important;">
                    {{{svg}}}
                </div>
                <div class="float-left text-start text-wrap ">
                    <p class="fs-6 mb-0 mt-3 fw-bold card-text">{{name}}</p>
                </div>
            </div>
            <div class="card-footer ">
                {{source}}
            </div>
        </a>
    </div>
</div>
